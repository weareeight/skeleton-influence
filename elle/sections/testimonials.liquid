{% comment %}
  Testimonials Section - Elle Theme
  Displays customer testimonials in a clean, understated grid or carousel
{% endcomment %}

{%- liquid
  assign section_id = 'Testimonials-' | append: section.id
  assign layout = section.settings.layout
  assign columns_desktop = section.settings.columns_desktop | plus: 0
  assign columns_mobile = section.settings.columns_mobile | plus: 0
  assign show_rating = section.settings.show_rating
-%}

<section
  id="{{ section_id }}"
  class="testimonials section section--{{ section.settings.padding }} {% render 'color-scheme', scheme: section.settings.color_scheme %}"
  data-section-id="{{ section.id }}"
  data-section-type="testimonials"
>
  <div class="container">
    {%- if section.settings.subheading != blank or section.settings.heading != blank or section.settings.text != blank -%}
      <div class="testimonials__header text-{{ section.settings.text_alignment }}">
        {%- if section.settings.subheading != blank -%}
          <p class="testimonials__subheading subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="testimonials__heading {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          <div class="testimonials__text rte">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div
        class="testimonials__wrapper{% if layout == 'carousel' %} testimonials__wrapper--carousel{% endif %}"
        style="--testimonials-columns-desktop: {{ columns_desktop }}; --testimonials-columns-mobile: {{ columns_mobile }};"
      >
        {%- if layout == 'carousel' -%}
          <div class="testimonials__carousel" data-testimonials-carousel>
            <div class="testimonials__track">
              {%- for block in section.blocks -%}
                <div class="testimonial" {{ block.shopify_attributes }}>
                  {%- render 'testimonial-card', block: block, show_rating: show_rating -%}
                </div>
              {%- endfor -%}
            </div>
          </div>

          {%- if section.blocks.size > columns_desktop -%}
            <div class="testimonials__navigation">
              <button
                type="button"
                class="testimonials__nav-btn testimonials__nav-btn--prev"
                aria-label="{{ 'accessibility.previous' | t }}"
                data-carousel-prev
                disabled
              >
                {% render 'icon', icon: 'chevron-left' %}
              </button>
              <button
                type="button"
                class="testimonials__nav-btn testimonials__nav-btn--next"
                aria-label="{{ 'accessibility.next' | t }}"
                data-carousel-next
              >
                {% render 'icon', icon: 'chevron-right' %}
              </button>
            </div>
          {%- endif -%}
        {%- else -%}
          <div class="testimonials__grid">
            {%- for block in section.blocks -%}
              <div class="testimonial" {{ block.shopify_attributes }}>
                {%- render 'testimonial-card', block: block, show_rating: show_rating -%}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</section>

{%- if layout == 'carousel' and section.blocks.size > columns_desktop -%}
  <script>
    (function() {
      const section = document.getElementById('{{ section_id }}');
      if (!section) return;

      const carousel = section.querySelector('[data-testimonials-carousel]');
      const track = carousel.querySelector('.testimonials__track');
      const slides = carousel.querySelectorAll('.testimonial');
      const prevBtn = section.querySelector('[data-carousel-prev]');
      const nextBtn = section.querySelector('[data-carousel-next]');

      if (!carousel || !track || slides.length === 0) return;

      let currentIndex = 0;
      let slidesPerView = {{ columns_desktop }};

      function getSlidesPerView() {
        if (window.innerWidth < 750) {
          return {{ columns_mobile }};
        }
        return {{ columns_desktop }};
      }

      function getMaxIndex() {
        return Math.max(0, slides.length - slidesPerView);
      }

      function updateCarousel() {
        slidesPerView = getSlidesPerView();
        const maxIndex = getMaxIndex();

        // Clamp current index
        if (currentIndex > maxIndex) {
          currentIndex = maxIndex;
        }

        // Calculate offset
        const slide = slides[0];
        const slideStyle = getComputedStyle(slide);
        const slideWidth = slide.offsetWidth;
        const gap = parseFloat(getComputedStyle(track).gap) || 0;
        const offset = currentIndex * (slideWidth + gap);

        track.style.transform = `translateX(-${offset}px)`;

        // Update button states
        if (prevBtn) prevBtn.disabled = currentIndex === 0;
        if (nextBtn) nextBtn.disabled = currentIndex >= maxIndex;
      }

      function goToPrev() {
        if (currentIndex > 0) {
          currentIndex--;
          updateCarousel();
        }
      }

      function goToNext() {
        const maxIndex = getMaxIndex();
        if (currentIndex < maxIndex) {
          currentIndex++;
          updateCarousel();
        }
      }

      if (prevBtn) prevBtn.addEventListener('click', goToPrev);
      if (nextBtn) nextBtn.addEventListener('click', goToNext);

      // Initialize
      track.style.transition = 'transform 0.4s ease';
      updateCarousel();

      // Handle resize
      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(updateCarousel, 100);
      });
    })();
  </script>
{%- endif -%}

{% stylesheet %}
  .testimonials__header {
    margin-bottom: var(--space-8);
  }

  .testimonials__header.text-center {
    text-align: center;
  }

  .testimonials__header.text-left {
    text-align: left;
  }

  .testimonials__subheading {
    margin-bottom: var(--space-2);
  }

  .testimonials__heading {
    margin-bottom: var(--space-3);
  }

  .testimonials__text {
    max-width: 40rem;
  }

  .testimonials__header.text-center .testimonials__text {
    margin-inline: auto;
  }

  /* Grid layout - bordered like FAQ */
  .testimonials__grid {
    display: grid;
    grid-template-columns: repeat(var(--testimonials-columns-mobile, 1), 1fr);
    border-top: 1px solid var(--color-border);
    border-left: 1px solid var(--color-border);
  }

  @media (min-width: 750px) {
    .testimonials__grid {
      grid-template-columns: repeat(var(--testimonials-columns-desktop, 3), 1fr);
    }
  }

  .testimonials__grid .testimonial {
    padding: var(--space-6);
    border-right: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  /* Carousel layout */
  .testimonials__wrapper--carousel {
    position: relative;
  }

  .testimonials__carousel {
    overflow: hidden;
  }

  .testimonials__track {
    display: flex;
    gap: 1px;
    background-color: var(--color-border);
  }

  .testimonials__track .testimonial {
    flex: 0 0 calc(100% / var(--testimonials-columns-mobile, 1));
    min-width: 0;
    padding: var(--space-6);
    background-color: var(--color-background);
  }

  @media (min-width: 750px) {
    .testimonials__track .testimonial {
      flex: 0 0 calc(100% / var(--testimonials-columns-desktop, 3));
    }
  }

  /* Carousel wraps items with border effect */
  .testimonials__carousel {
    border: 1px solid var(--color-border);
  }

  /* Navigation */
  .testimonials__navigation {
    display: flex;
    justify-content: center;
    gap: var(--space-2);
    margin-top: var(--space-6);
  }

  .testimonials__nav-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .testimonials__nav-btn:hover:not(:disabled) {
    background-color: var(--color-foreground);
    color: var(--color-background);
    border-color: var(--color-foreground);
  }

  .testimonials__nav-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .testimonials__nav-btn svg {
    width: 1rem;
    height: 1rem;
  }

  /* Section padding variants */
  .testimonials.section--none {
    padding-block: 0;
  }

  .testimonials.section--small {
    padding-block: var(--section-spacing-sm);
  }

  .testimonials.section--medium {
    padding-block: var(--section-spacing-md);
  }

  .testimonials.section--large {
    padding-block: var(--section-spacing-lg);
  }
{% endstylesheet %}

