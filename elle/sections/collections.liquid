      "default": "landscape"
    },
    {
      "type": "checkbox",
      "id": "show_collection_count",
      "label": "t:sections.collections_grid.settings.show_collection_count.label",
      "default": true
    },
    {
      "type": "range",
      "id": "collections_to_show",
