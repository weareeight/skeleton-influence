{% comment %}
  Split Hero Section - Elle Theme
  Two-column hero with image + content side by side
  Alternative to full-bleed heroes with more room for storytelling
{% endcomment %}

{%- liquid
  assign section_id = 'SplitHero-' | append: section.id
  assign image_position = section.settings.image_position
  assign split_ratio = section.settings.split_ratio
  assign height = section.settings.height
  assign vertical_alignment = section.settings.vertical_alignment
  assign content_alignment = section.settings.content_alignment
  assign mobile_image_position = section.settings.mobile_image_position
  assign padding = section.settings.padding
  assign overlay_style = section.settings.overlay_style | default: 'none'
  assign overlay_opacity = section.settings.overlay_opacity | default: 0
-%}

<section
  id="{{ section_id }}"
  class="split-hero section section--{{ padding }} split-hero--{{ image_position }} split-hero--{{ height }} split-hero--mobile-image-{{ mobile_image_position }} split-hero--overlay-{{ overlay_style }} {% render 'color-scheme', scheme: section.settings.color_scheme %}"
  data-section-id="{{ section.id }}"
  data-section-type="split-hero"
  style="--split-hero-overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }};"
>
  <div class="split-hero__grid split-hero__grid--{{ split_ratio }}">
    {%- comment -%} Image Side with reveal animation {%- endcomment -%}
    {%- assign image_reveal = 'reveal' -%}
    {%- if image_position == 'right' -%}
      {%- assign image_reveal = 'reveal-right' -%}
    {%- endif -%}
    <div class="split-hero__media" data-animate="{{ image_reveal }}">
      <div class="split-hero__media-inner{% if section.settings.enable_parallax %} split-hero__media-inner--parallax{% endif %}">
        {%- if section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 1600
            | image_tag:
              loading: 'eager',
              fetchpriority: 'high',
              sizes: '(min-width: 990px) 50vw, 100vw',
              widths: '375, 550, 750, 1000, 1200, 1400, 1600',
              class: 'split-hero__image'
          }}
        {%- else -%}
          <div class="split-hero__placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'split-hero__placeholder-svg' }}
          </div>
        {%- endif -%}
      </div>
      {%- if overlay_style != 'none' and overlay_opacity > 0 -%}
        <div class="split-hero__overlay"></div>
      {%- endif -%}
    </div>

    {%- comment -%} Content Side with staggered animations {%- endcomment -%}
    <div class="split-hero__content split-hero__content--{{ vertical_alignment }} text-{{ content_alignment }}">
      <div class="split-hero__content-inner{% if content_alignment == 'center' %} split-hero__content-inner--center{% endif %}">
        {%- assign animation_index = 0 -%}
        {%- for block in section.blocks -%}
          {%- assign animation_delay = animation_index | times: 100 | plus: 200 -%}
          {%- case block.type -%}
            {%- when 'subheading' -%}
              {%- if block.settings.text != blank -%}
                <p
                  class="split-hero__subheading subheading"
                  data-animate="fade"
                  style="--delay: {{ animation_delay }}ms"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </p>
                {%- assign animation_index = animation_index | plus: 1 -%}
              {%- endif -%}

            {%- when 'heading' -%}
              {%- if block.settings.text != blank -%}
                <h1
                  class="split-hero__heading"
                  data-animate="up-lg"
                  style="--delay: {{ animation_delay }}ms"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </h1>
                {%- assign animation_index = animation_index | plus: 1 -%}
              {%- endif -%}

            {%- when 'text' -%}
              {%- if block.settings.text != blank -%}
                <div
                  class="split-hero__text rte"
                  data-animate
                  style="--delay: {{ animation_delay }}ms"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </div>
                {%- assign animation_index = animation_index | plus: 1 -%}
              {%- endif -%}

            {%- when 'button' -%}
              {%- if block.settings.label != blank -%}
                <div
                  class="split-hero__buttons"
                  data-animate="pop"
                  style="--delay: {{ animation_delay }}ms"
                  {{ block.shopify_attributes }}
                >
                  <a
                    href="{{ block.settings.link }}"
                    class="split-hero__btn btn btn--{{ block.settings.style }}"
                  >
                    <span>{{ block.settings.label }}</span>
                    {%- if block.settings.show_arrow -%}
                      <svg class="split-hero__btn-arrow" width="20" height="20" viewBox="0 0 256 256" fill="currentColor" aria-hidden="true">
                        <path d="M218.83,130.83l-72,72a4,4,0,0,1-5.66-5.66L206.34,132H40a4,4,0,0,1,0-8H206.34L141.17,58.83a4,4,0,0,1,5.66-5.66l72,72A4,4,0,0,1,218.83,130.83Z"/>
                      </svg>
                    {%- endif -%}
                  </a>
                </div>
                {%- assign animation_index = animation_index | plus: 1 -%}
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{%- if section.settings.enable_parallax -%}
  <script>
    (function() {
      const section = document.getElementById('{{ section_id }}');
      if (!section) return;

      // Check for reduced motion preference
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (prefersReducedMotion) return;

      const mediaInner = section.querySelector('.split-hero__media-inner--parallax');
      if (!mediaInner) return;

      let ticking = false;

      function handleScroll() {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            const rect = section.getBoundingClientRect();
            const windowHeight = window.innerHeight;

            // Only animate when section is in view
            if (rect.bottom > 0 && rect.top < windowHeight) {
              const scrollProgress = (windowHeight - rect.top) / (windowHeight + rect.height);
              const parallaxOffset = (scrollProgress - 0.5) * 120; // Â±60px range
              mediaInner.style.transform = `translateY(${parallaxOffset}px)`;
            }

            ticking = false;
          });
          ticking = true;
        }
      }

      // Use IntersectionObserver to only listen when visible
      const observer = new IntersectionObserver((entries) => {
        if (entries[0].isIntersecting) {
          window.addEventListener('scroll', handleScroll, { passive: true });
          handleScroll(); // Initial position
        } else {
          window.removeEventListener('scroll', handleScroll);
        }
      }, { threshold: 0 });

      observer.observe(section);
    })();
  </script>
{%- endif -%}

{% stylesheet %}
  .split-hero {
    width: 100%;
  }

  /* Height options */
  .split-hero--auto .split-hero__grid { min-height: auto; }
  .split-hero--medium .split-hero__grid { min-height: 60vh; }
  .split-hero--large .split-hero__grid { min-height: 80vh; }
  .split-hero--full .split-hero__grid { min-height: 100vh; min-height: 100svh; }

  /* Grid layout */
  .split-hero__grid {
    display: grid;
  }

  @media (min-width: 990px) {
    .split-hero__grid {
      grid-template-columns: 1fr 1fr;
    }

    .split-hero__grid--wide-image {
      grid-template-columns: 1.5fr 1fr;
    }

    .split-hero__grid--wide-content {
      grid-template-columns: 1fr 1.5fr;
    }

    /* Image position swap */
    .split-hero--right .split-hero__media {
      order: 2;
    }
  }

  /* Media side */
  .split-hero__media {
    position: relative;
    overflow: hidden;
    min-height: 50vh;
  }

  @media (min-width: 990px) {
    .split-hero__media {
      min-height: 100%;
    }
  }

  .split-hero__media-inner {
    position: absolute;
    inset: 0;
  }

  .split-hero__media-inner--parallax {
    inset: -60px 0;
    will-change: transform;
  }

  .split-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .split-hero__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-muted) 0%, var(--color-background) 100%);
  }

  .split-hero__placeholder-svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.5;
  }

  /* Overlay styles */
  .split-hero__overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .split-hero--overlay-solid .split-hero__overlay {
    background-color: rgb(0 0 0 / var(--split-hero-overlay-opacity, 0.3));
  }

  .split-hero--overlay-gradient .split-hero__overlay {
    background: linear-gradient(
      to top,
      rgb(0 0 0 / calc(var(--split-hero-overlay-opacity, 0.3) * 1.5)) 0%,
      rgb(0 0 0 / calc(var(--split-hero-overlay-opacity, 0.3) * 0.5)) 50%,
      transparent 100%
    );
  }

  .split-hero--overlay-vignette .split-hero__overlay {
    background: radial-gradient(
      ellipse at center,
      rgb(0 0 0 / calc(var(--split-hero-overlay-opacity, 0.3) * 0.3)) 50%,
      rgb(0 0 0 / var(--split-hero-overlay-opacity, 0.3)) 100%
    );
  }

  /* Content side */
  .split-hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: var(--space-12) var(--page-margin);
  }

  @media (min-width: 990px) {
    .split-hero__content {
      padding: var(--space-16) var(--space-12);
      min-height: 100%;
    }
  }

  .split-hero__content--top { justify-content: flex-start; }
  .split-hero__content--center { justify-content: center; }
  .split-hero__content--bottom { justify-content: flex-end; }

  .split-hero__content-inner {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    max-width: 32rem;
  }

  .split-hero__content-inner--center {
    align-items: center;
  }

  /* Typography */
  .split-hero__subheading {
    font-size: var(--font-size-xs);
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-muted-foreground);
  }

  .split-hero__heading {
    font-family: var(--font-heading-family);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: var(--font-heading-weight);
    line-height: 1.1;
    letter-spacing: -0.02em;
    text-wrap: balance;
  }

  .split-hero__text {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    opacity: 0.85;
  }

  .split-hero__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-top: var(--space-4);
  }

  .split-hero__btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
  }

  .split-hero__btn-arrow {
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .split-hero__btn:hover .split-hero__btn-arrow {
    transform: translateX(4px);
  }

  /* Mobile stacking */
  @media (max-width: 989px) {
    .split-hero--mobile-image-bottom .split-hero__media {
      order: 2;
    }

    .split-hero__media {
      min-height: 40vh;
    }

    .split-hero--full .split-hero__media {
      min-height: 50vh;
    }

    .split-hero__content {
      padding: var(--space-8) var(--page-margin);
    }

    .split-hero__heading {
      font-size: clamp(1.75rem, 8vw, 2.5rem);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .split-hero__media-inner--parallax {
      inset: 0;
    }

    .split-hero__btn-arrow {
      transition: none;
    }
  }

  /* Section padding variants */
  .split-hero.section--none {
    padding-block: 0;
  }

  .split-hero.section--small {
    padding-block: var(--section-spacing-sm);
  }

  .split-hero.section--medium {
    padding-block: var(--section-spacing-md);
  }

  .split-hero.section--large {
    padding-block: var(--section-spacing-lg);
  }
{% endstylesheet %}

