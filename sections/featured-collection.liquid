    },
    {
      "type": "header",
      "content": "t:labels.product_card"
    },
    {
      "type": "checkbox",
      "id": "show_swatches",
      "label": "t:sections.featured_collection.settings.show_swatches.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "t:sections.featured_collection.settings.show_view_all.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:labels.section"
    },
    {
      "type": "select",
      "id": "padding",
      "label": "t:labels.padding",
      "options": [
        { "value": "none", "label": "t:options.padding.none" },
        { "value": "small", "label": "t:options.padding.small" },
        { "value": "medium", "label": "t:options.padding.medium" },
        { "value": "large", "label": "t:options.padding.large" }
      ],
      "default": "medium"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:labels.color_scheme",
      "default": "scheme_1"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured_collection.name"
    }
  ]
