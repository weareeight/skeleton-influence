{% comment %}
  Main Page Section - Influence Theme
  Displays page content
{% endcomment %}

<section
  class="main-page section {% render 'color-scheme', scheme: section.settings.color_scheme %} section-padding--top-{{ section.settings.padding_top }} section-padding--bottom-{{ section.settings.padding_bottom }}"
>
  <div class="container{% if section.settings.narrow_container %} container--narrow{% endif %}">
    {%- if section.settings.show_title -%}
      <h1 class="main-page__title {{ section.settings.heading_size }}" data-animate="fade-up">{{ page.title }}</h1>
    {%- endif -%}

    {%- if page.content != blank -%}
      <div class="main-page__content rte" data-animate="fade-up" data-animate-delay="100">
        {{ page.content }}
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
/* Main Page Section */
.main-page {
  padding: var(--section-padding-top) 0 var(--section-padding-bottom);
}

.main-page__container {
  --page-max-width: 100%;
}

.main-page__container--narrow {
  --page-max-width: 780px;
}

.main-page__inner {
  max-width: var(--page-max-width);
  margin: 0 auto;
}

/* Page Header */
.main-page__title {
  margin: 0 0 var(--space-8);
  text-align: center;
}

/* Page Content - Rich Text Styling */
.main-page__content {
  line-height: 1.7;
}

.main-page__content h1,
.main-page__content h2,
.main-page__content h3,
.main-page__content h4,
.main-page__content h5,
.main-page__content h6 {
  margin-top: 1.5em;
  margin-bottom: 0.5em;
}

.main-page__content h1:first-child,
.main-page__content h2:first-child,
.main-page__content h3:first-child {
  margin-top: 0;
}

.main-page__content p {
  margin: 0 0 1em;
}

.main-page__content p:last-child {
  margin-bottom: 0;
}

.main-page__content a {
  color: inherit;
  text-decoration: underline;
  text-underline-offset: 0.2em;
}

.main-page__content a:hover {
  opacity: 0.7;
}

.main-page__content ul,
.main-page__content ol {
  padding-left: 1.5em;
  margin: 0 0 1em;
}

.main-page__content li {
  margin-bottom: 0.5em;
}

.main-page__content li:last-child {
  margin-bottom: 0;
}

.main-page__content blockquote {
  margin: 1.5em 0;
  padding: var(--space-6) var(--space-8);
  border-left: 4px solid var(--color-foreground);
  background: var(--color-background-alt, rgba(0, 0, 0, 0.03));
  font-style: italic;
}

.main-page__content blockquote p:last-child {
  margin-bottom: 0;
}

.main-page__content img {
  max-width: 100%;
  height: auto;
  border-radius: var(--radius-md);
  margin: 1.5em 0;
}

.main-page__content table {
  width: 100%;
  border-collapse: collapse;
  margin: 1.5em 0;
}

.main-page__content th,
.main-page__content td {
  padding: var(--space-3) var(--space-4);
  text-align: left;
  border-bottom: 1px solid var(--color-border);
}

.main-page__content th {
  font-weight: var(--font-weight-medium);
}

.main-page__content pre,
.main-page__content code {
  font-family: monospace;
  font-size: 0.9em;
}

.main-page__content pre {
  background: var(--color-background-alt, rgba(0, 0, 0, 0.03));
  padding: var(--space-4);
  border-radius: var(--radius-sm);
  overflow-x: auto;
  margin: 1.5em 0;
}

.main-page__content code {
  background: var(--color-background-alt, rgba(0, 0, 0, 0.03));
  padding: 0.1em 0.3em;
  border-radius: var(--radius-xs);
}

.main-page__content pre code {
  background: none;
  padding: 0;
}

.main-page__content hr {
  border: none;
  border-top: 1px solid var(--color-border);
  margin: 2em 0;
}
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.main_page.name",
  "tag": "section",
  "class": "section-main-page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "t:sections.main_page.settings.show_title.label",
      "default": true
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:labels.heading_size",
      "options": [
        { "value": "h3", "label": "t:options.heading_size.small" },
        { "value": "h2", "label": "t:options.heading_size.medium" },
        { "value": "h1", "label": "t:options.heading_size.large" }
      ],
      "default": "h1"
    },
    {
      "type": "checkbox",
      "id": "narrow_container",
      "label": "t:sections.main_page.settings.narrow_container.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:labels.section"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:labels.color_scheme",
      "default": "scheme_1"
    },
    {
      "type": "select",
      "id": "padding_top",
      "label": "t:labels.padding_top",
      "options": [
        { "value": "none", "label": "t:options.padding.none" },
        { "value": "small", "label": "t:options.padding.small" },
        { "value": "medium", "label": "t:options.padding.medium" },
        { "value": "large", "label": "t:options.padding.large" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "padding_bottom",
      "label": "t:labels.padding_bottom",
      "options": [
        { "value": "none", "label": "t:options.padding.none" },
        { "value": "small", "label": "t:options.padding.small" },
        { "value": "medium", "label": "t:options.padding.medium" },
        { "value": "large", "label": "t:options.padding.large" }
      ],
      "default": "medium"
    }
  ]
}
{% endschema %}
