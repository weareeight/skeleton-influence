{% comment %}
  Newsletter Section - Elle Theme (REQUIRED FOR THEME STORE)
  Email signup form for marketing
{% endcomment %}

{%- liquid
  assign section_id = 'Newsletter-' | append: section.id
  assign padding = section.settings.padding
-%}

<section id="{{ section_id }}" class="newsletter section section--{{ padding }} {% render 'color-scheme', scheme: section.settings.color_scheme %}">
  <div class="container">
    <div class="newsletter__inner text-{{ section.settings.text_alignment }}{% if section.settings.narrow_content %} newsletter__inner--narrow{% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'subheading' -%}
            {%- if block.settings.text != blank -%}
              <p class="newsletter__subheading subheading" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            {%- endif -%}

          {%- when 'heading' -%}
            {%- if block.settings.text != blank -%}
              <h2 class="newsletter__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </h2>
            {%- endif -%}

          {%- when 'text' -%}
            {%- if block.settings.text != blank -%}
              <div class="newsletter__text rte" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- endif -%}

          {%- when 'form' -%}
            <div class="newsletter__form" {{ block.shopify_attributes }}>
              {%- form 'customer', id: 'NewsletterForm', class: 'newsletter-form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">

                {%- if form.posted_successfully? -%}
                  <div class="form-message form-message--success" tabindex="-1" autofocus>
                    {% render 'icon', icon: 'checkmark' %}
                    {{ 'newsletter.success' | t }}
                  </div>
                {%- else -%}
                  {%- if form.errors -%}
                    <div class="form-message form-message--error" role="alert" aria-live="polite" id="Newsletter-error-{{ section.id }}">
                      {{ form.errors.messages['email'] }}
                    </div>
                  {%- endif -%}

                  <div class="newsletter-form__field">
                    <label for="NewsletterEmail-{{ section.id }}" class="visually-hidden">
                      {{ 'newsletter.email_placeholder' | t }}
                    </label>
                    <input
                      type="email"
                      id="NewsletterEmail-{{ section.id }}"
                      name="contact[email]"
                      class="form-input newsletter-form__input"
                      placeholder="{{ 'newsletter.email_placeholder' | t }}"
                      required
                      autocomplete="email"
                      {% if form.errors %}
                        aria-invalid="true"
                        aria-describedby="Newsletter-error-{{ section.id }}"
                      {% endif %}
                    >
                    <button type="submit" class="btn btn--{{ block.settings.button_style }} newsletter-form__btn">
                      {%- if block.settings.button_label != blank -%}
                        {{ block.settings.button_label }}
                      {%- else -%}
                        {{ 'newsletter.subscribe' | t }}
                      {%- endif -%}
                    </button>
                  </div>
                {%- endif -%}
              {%- endform -%}

              {%- if block.settings.disclaimer != blank -%}
                <div class="newsletter-form__disclaimer rte">{{ block.settings.disclaimer }}</div>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .newsletter__inner {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .newsletter__inner.text-center {
    align-items: center;
  }

  .newsletter__inner.text-left {
    align-items: flex-start;
  }

  /* Narrow content variant - respects alignment */
  .newsletter__inner--narrow {
    max-width: 50%;
  }

  .newsletter__inner--narrow.text-center {
    margin-inline: auto;
  }

  .newsletter__inner--narrow.text-left {
    margin-inline-start: 0;
    margin-inline-end: auto;
  }

  @media (max-width: 749px) {
    .newsletter__inner--narrow {
      max-width: 100%;
    }
  }

  .newsletter__inner--narrow .newsletter__heading {
    max-width: 30rem;
  }

  .newsletter__inner--narrow .newsletter__text {
    max-width: 30rem;
  }

  /* Section padding variants */
  .newsletter.section--none {
    padding-block: 0;
  }

  .newsletter.section--small {
    padding-block: var(--section-spacing-sm);
  }

  .newsletter.section--medium {
    padding-block: var(--section-spacing-md);
  }

  .newsletter.section--large {
    padding-block: var(--section-spacing-lg);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.newsletter.name",
  "tag": "section",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:labels.text_alignment",
      "options": [
        { "value": "left", "label": "t:options.alignment.left" },
        { "value": "center", "label": "t:options.alignment.center" }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "narrow_content",
      "label": "Narrow content",
      "default": true
    },
    {
      "type": "header",
      "content": "t:labels.section"
    },
    {
      "type": "select",
      "id": "padding",
      "label": "t:labels.padding",
      "options": [
        { "value": "none", "label": "t:options.padding.none" },
        { "value": "small", "label": "t:options.padding.small" },
        { "value": "medium", "label": "t:options.padding.medium" },
        { "value": "large", "label": "t:options.padding.large" }
      ],
      "default": "medium"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:labels.color_scheme",
      "default": "scheme_2"
    }
  ],
  "blocks": [
    {
      "type": "subheading",
      "name": "t:blocks.subheading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "t:labels.text",
          "default": "Subscribe today"
        }
      ]
    },
    {
      "type": "heading",
      "name": "t:blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "t:labels.heading",
          "default": "Join our newsletter"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "t:labels.heading_size",
          "options": [
            { "value": "h3", "label": "t:options.heading_size.small" },
            { "value": "h2", "label": "t:options.heading_size.medium" },
            { "value": "h1", "label": "t:options.heading_size.large" }
          ],
          "default": "h2"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "t:labels.text",
          "default": "<p>Get exclusive access to new arrivals, sales, and members-only offers.</p>"
        }
      ]
    },
    {
      "type": "form",
      "name": "t:blocks.form.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "t:labels.button_label",
          "info": "t:sections.newsletter.settings.button_label.info"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "t:labels.button_style",
          "options": [
            { "value": "filled", "label": "t:options.button_style.filled" },
            { "value": "outline", "label": "t:options.button_style.outline" },
            { "value": "underline", "label": "t:options.button_style.underline" }
          ],
          "default": "filled"
        },
        {
          "type": "richtext",
          "id": "disclaimer",
          "label": "t:sections.newsletter.settings.disclaimer.label",
          "default": "<p>By subscribing, you agree to our privacy policy.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.newsletter.name",
      "blocks": [
        { "type": "subheading" },
        { "type": "heading" },
        { "type": "text" },
        { "type": "form" }
      ]
    }
  ]
}
{% endschema %}
